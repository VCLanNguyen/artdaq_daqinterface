daq: {
  event_builder: {
    expected_fragments_per_event: 0  # Will be set by DAQInterface
    max_event_size_bytes: 16777216
    use_art: true
    buffer_count: 5
    max_incomplete_events: 75 # Same as boardreader sync interval
    verbose: true
    send_requests: false

    sources: { }
  }

  metrics: {
    evbFile: {
      metricPluginType: "file"
      level: 3
      fileName: "/tmp/eventbuilder/evb_%UID%_metrics.log"
      uniquify: true
    }
  }
} 

art: {
  services: {
    scheduler: {
      errorOnFailureToPut: false
    }
    NetMonTransportServiceInterface: {
      service_provider: NetMonTransportService
      #broadcast_sends: true
      destinations: {}
    }
  }

  source: {
    module_type: DemoInput
    waiting_time: 2500000
    resume_after_timeout: true
  }

  physics: {
    analyzers: { }

    producers: { }

    filters: { }

    my_output_modules: [ routingNetOutput ]
  }

  outputs: {
    routingNetOutput: {
      module_type: RoutingNetOutput
      destinations: {}

      allow_default_round_robin_routing: false

      policy: {
        policy: "NoOp"
        receiver_ranks: []
      }

      sender_ranks: []

      token_receiver: {
          routing_token_port: 35555  # default
      }
    }
  }

  process_name: DAQ
}
