  daq: {
  policy: {
  	  policy: "NoOp"
	  receiver_ranks: [4,5]
  }

  sender_ranks: [2,3]

  	use_routing_master: true
    senders_send_by_send_count: true
	routing_master_hostname: "mu2edaq01.fnal.gov"
	routing_timeout_ms: 500
	table_update_interval_ms: 1000
	table_ack_retry_count: 5

	table_update_port: 36556
	table_update_address: "227.128.12.29"
	routing_token_port: 36555
	table_acknowledge_port: 36557
	

  metrics: {
	rmFile: {
	  metricPluginType: "file"
	  level: 3
	  fileName: "/tmp/RoutingMaster/rm_%UID%_metrics.log"
	  uniquify: true
	}
	 ganglia: {
	   metricPluginType: "ganglia"
	   level: 3
	   reporting_interval: 15.0
	 
	   configFile: "/etc/ganglia/gmond.conf"
	   group: "ARTDAQ"
	 }
